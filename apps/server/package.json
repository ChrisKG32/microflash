{
  "name": "@microflash/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json && cp -R src/generated/prisma dist/generated/prisma",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='\\.test\\.ts$'",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='\\.spec\\.ts$'",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@clerk/express": "^1.5.0",
    "@microflash/shared": "workspace:*",
    "@prisma/client": "^6.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.10",
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^6.1.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
