{
  "name": "microflash",
  "version": "0.1.0",
  "private": true,
  "description": "MicroFlash - Intelligent Spaced Repetition Learning",
  "scripts": {
    "dev:server": "pnpm --filter @microflash/server dev",
    "dev:mobile": "pnpm --filter @microflash/mobile dev",
    "dev:desktop": "pnpm --filter @microflash/desktop dev",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist build .expo && rm -rf node_modules",
    "test": "jest",
    "test:unit": "jest --testPathPattern='\\.test\\.ts$'",
    "test:integration": "jest --testPathPattern='\\.spec\\.ts$'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server": "pnpm --filter @microflash/server test"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "fsrs",
    "react-native",
    "expo"
  ],
  "author": "Kyla Gregory",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/recommended": "^1.0.11",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
