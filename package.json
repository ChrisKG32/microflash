{
  "name": "microflash",
  "version": "0.1.0",
  "private": true,
  "description": "MicroFlash - Intelligent Spaced Repetition Learning",
  "scripts": {
    "dev": "pnpm --filter @microflash/server dev",
    "dev:app": "pnpm --filter @microflash/client dev",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "fsrs",
    "react-native",
    "expo"
  ],
  "author": "Kyla Gregory",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-native": "^4.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
